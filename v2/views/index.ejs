<%- include("partials/header") %>

    <div class = "container">
        <header class ="jumbotron">
            <h3> Welcome to Campground </h3>
            <a class = "btn btn-primary btn-large" href = "/campground/new">Add new camp</a>
        </header>
    
    
        <div class = "row text-center">  
        <% campgrounds.forEach(function(campground_i) { %>
            <div class = "col-md-3 col-sm-6">
                <div class = "thumbnail">
                    <img src = "<%=campground_i.image%>">
                
                    <div class = "caption">
                        <h3><%= campground_i.title %> </h3>
                    </div>
                    <p><a href ="/campground/<%= campground_i._id %>" class = "btn btn-primary">More Info </a></p>
                </div>
                
            </div>
        <% }); %>
    </div>

<%- include("partials/footer") %>